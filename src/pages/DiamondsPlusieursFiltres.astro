---
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import diamonds from "../assets/diamonds.json";
---

<Layout>
    <div class="m-5">
        <h3 class="text-3xl my-5">Diamonds avec plusieurs filtres</h3>
        <a class="text-blue-900 my-5" href="/">Retour aux étapes</a>

        <div class="flex gap-4 mb-4">
            <div>
                <label for="cut" class="mr-2">Cut :</label>
                <select name="cut" id="cut" class="border p-1">
                    <option value="">Tous</option>
                    <option value="Fair">Fair</option>
                    <option value="Good">Good</option>
                    <option value="Very Good">Very Good</option>
                    <option value="Premium">Premium</option>
                    <option value="Ideal">Ideal</option>
                </select>
            </div>

            <div>
                <label for="color" class="mr-2">Color :</label>
                <select name="color" id="color" class="border p-1">
                    <option value="">Tous</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                    <option value="I">I</option>
                    <option value="J">J</option>
                </select>
            </div>

            <div>
                <label for="clarity" class="mr-2">Clarity :</label>
                <select name="clarity" id="clarity" class="border p-1">
                    <option value="">Tous</option>
                    <option value="I1">I1</option>
                    <option value="SI2">SI2</option>
                    <option value="SI1">SI1</option>
                    <option value="VS2">VS2</option>
                    <option value="VS1">VS1</option>
                    <option value="VVS2">VVS2</option>
                    <option value="VVS1">VVS1</option>
                    <option value="IF">IF</option>
                </select>
            </div>
        </div>

        <div id="myplot" data-diamonds={JSON.stringify(diamonds)}></div>

        <script>
            import * as Plot from "@observablehq/plot";

            const div = document.querySelector("#myplot");
            const selectCut = document.querySelector("#cut");
            const selectColor = document.querySelector("#color");
            const selectClarity = document.querySelector("#clarity");
            const diamonds = JSON.parse(div.dataset.diamonds);

            function renderPlot() {
                const cut = selectCut.value;
                const color = selectColor.value;
                const clarity = selectClarity.value;

                // Filtrer selon les 3 critères
                const data = diamonds.filter(
                    (d) =>
                        (!cut || d.cut === cut) &&
                        (!color || d.color === color) &&
                        (!clarity || d.clarity === clarity),
                );

                // Vider le contenu précédent
                div.innerHTML = "";

                // Créer le scatterplot
                const plot = Plot.plot({
                    marks: [
                        Plot.dot(data, {
                            x: "carat",
                            y: "price",
                            stroke: "cut",
                        }),
                    ],
                    x: { label: "Carat" },
                    y: { label: "Price" },
                });

                div.append(plot);
            }

            // Rafraîchir à chaque changement de filtre
            [selectCut, selectColor, selectClarity].forEach((select) =>
                select.addEventListener("change", renderPlot),
            );

            // Premier affichage
            renderPlot();
        </script>
    </div>
</Layout>
