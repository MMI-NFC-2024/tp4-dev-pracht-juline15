---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-2xl m-5 my-10">Test Astro et Plot (Observablehq)</h1>

  <a class="m-5 my-10 border-2 border-green-700 p-2 rounded-full" href="/simple"
    >Simple</a
  >

  <p class="text-xl m-5 mt-10 text-pink-700">Penguins</p>
  <nav>
    <ul class="flex gap-2 m-5">
      <li>
        <a
          class="border-2 border-pink-700 p-2 rounded-full"
          href="/simplePenguin">Simple Penguin</a
        >
      </li>
      <li>
        <a
          class="border-2 border-pink-700 p-2 rounded-full"
          href="/PenguinAvecFiltre">Penguin avec filtre</a
        >
      </li>
      <li>
        <a
          class="border-2 border-pink-700 p-2 rounded-full"
          href="/PenguinPlusieursFiltres">Penguin avec plusieurs filtres</a
        >
      </li>
    </ul>
  </nav>

  <p class="text-xl m-5 mt-10 text-purple-800">Diamonds</p>
  <nav>
    <ul class="flex gap-2 m-5">
      <li>
        <a
          class="border-2 border-purple-800 p-2 rounded-full"
          href="/simpleDiamonds">Simple Diamonds</a
        >
      </li>
      <li>
        <a
          class="border-2 border-purple-800 p-2 rounded-full"
          href="/DiamondsAvecFiltre">Diamonds avec filtre</a
        >
      </li>
      <li>
        <a
          class="border-2 border-purple-800 p-2 rounded-full"
          href="/DiamondsPlusieursFiltres">Diamonds avec plusieurs filtres</a
        >
      </li>
    </ul>
  </nav>

  <p class="text-xl m-5 mt-10 text-blue-900">Weather</p>
  <nav>
    <ul class="flex gap-2 m-5">
      <li>
        <a
          class="border-2 border-blue-900 p-2 rounded-full"
          href="/simpleWeather">Simple Weather</a
        >
      </li>
      <li>
        <a
          class="border-2 border-blue-900 p-2 rounded-full"
          href="/WeatherAvecFiltre">Weather avec filtre</a
        >
      </li>
      <li>
        <a
          class="border-2 border-blue-900 p-2 rounded-full"
          href="/WeatherPlusieursFiltres">Weather avec plusieurs filtres</a
        >
      </li>
    </ul>
  </nav>
</Layout>
